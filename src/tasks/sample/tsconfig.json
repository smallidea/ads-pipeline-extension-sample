{
    "compilerOptions": {
        "target": "ES6",
        "rootDir": "../../../src/",
        "outDir": "./dist/",
        "sourceMap": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "strict": true
    },
    "include": [
        "./*"
    ]
}